<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20sp"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/font_size_20sp"
            android:layout_marginTop="@dimen/font_size_20sp"
            android:layout_marginRight="@dimen/font_size_20sp"
            app:cardCornerRadius="@dimen/margin_basic_10dp">

            <ImageView
                android:id="@+id/iv_rest_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/chicken2"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Chicken Machboos is ready !"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_size_12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="At: Parallax Restaurant"
            android:textColor="@color/red"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Did you Take it?"
            android:textColor="@color/gray"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/font_size_20sp"
            android:layout_marginBottom="@dimen/font_size_20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:paddingLeft="@dimen/font_size_20sp"
                android:paddingTop="@dimen/margin_basic_4dp"
                android:paddingRight="@dimen/font_size_20sp"
                android:paddingBottom="@dimen/margin_basic_4dp"
                android:text="YES"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/font_size_20sp"
                android:background="@drawable/btn_golden"
                android:gravity="center"
                android:paddingLeft="@dimen/font_size_20sp"
                android:paddingTop="@dimen/margin_basic_4dp"
                android:paddingRight="@dimen/font_size_20sp"
                android:paddingBottom="@dimen/margin_basic_4dp"
                android:text="NO"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>