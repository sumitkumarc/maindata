<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rly"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/graycircle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backblack" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:clipToPadding="false"
                            android:scrollbars="none" />


                        <include layout="@layout/c_row_requestpending_item" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="60dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="The Restaurant\nAccepted Your\nOrder"
                            android:textColor="@color/green"
                            android:textSize="30dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_hfirst"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:background="@drawable/btn1_designrect"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_hfsecond"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:background="@drawable/btn1_designrect"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Hours"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="#FF0015" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=" "
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_mfirst"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:background="@drawable/btn1_designrect"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_mSecond"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Minute"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="#FF0015" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=" "
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_sFirst"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="35dp"
                                        android:layout_height="55dp"
                                        android:background="@drawable/btn1_designrect">

                                        <TextView
                                            android:id="@+id/txt_sSecond"
                                            style="@style/TextAppearance.MaterialComponents.Headline6"
                                            android:layout_width="35dp"
                                            android:layout_height="55dp"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FF0015"
                                            android:textSize="19sp" />
                                    </LinearLayout>


                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Seconds"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Note: You Cannot Cancel Your Order After 2 Minutes!"
                            android:textColor="#707070"
                            android:textSize="10dp" />

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbotom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp">

                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_pay_now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Pay now"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>