<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:background="@drawable/btn_gray"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:padding="10dp"
                android:gravity="top"
                android:background="@drawable/btn_gray"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/ivRestProfileImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chicken2" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!--            android:text="Chicken Machboos"-->
                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/red"
                        android:textSize="16sp" />
                    <!--            android:text="Order time 12:00"-->
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Order time || 06.01.2021"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/red"
                        android:textSize="14sp" />
                    <!--            android:text="Oder No: MB214ZX5"-->
                    <TextView
                        android:id="@+id/txt_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Order NO :"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/darkgray"
                        android:textSize="14sp" />
                    <!--            android:text="Paid: SR 117.65"-->
                    <TextView
                        android:id="@+id/txt_order_payment_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="paid SR :550.00"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/darkgray"
                        android:textSize="14sp" />
                    <!--            android:text="Payment type: Credit card"-->
                    <TextView
                        android:id="@+id/txt_order_pamnet_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Paymnet type : Cash On delivr"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/darkgray"
                        android:textSize="14sp" />
                    <!--            android:text="Status: Pending"-->
                    <TextView
                        android:id="@+id/txt_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Status : New"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/green"
                        android:textSize="14sp" />
                    <!--            android:text="Delivery time: 12:15pm"-->
                    <TextView
                        android:id="@+id/txt_deliver_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Dilvir time "
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/darkgray"
                        android:textSize="14sp" />
                    <!--            android:text="Cancel time: Within 2 mins"-->
                    <TextView
                        android:id="@+id/txt_cancle_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Cancel time : within 2 minis"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/darkgray"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:theme="@style/RatingBar" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Share your expirence"
                        android:padding="15dp"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="bottom|center_horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_reOrder"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/btn_golden"
            android:text="@string/Reorder"
            android:textColor="@color/darkwhite"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>