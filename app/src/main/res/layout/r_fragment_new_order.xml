<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:id="@+id/fl_details"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/r_liner_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_user_name"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/r_ic_user" />

                            <TextView
                                android:id="@+id/txt_user_name"
                                style="@style/TextAppearance.MaterialComponents.Headline6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Sahaj Godhani"
                                android:textAlignment="center"
                                android:textColor="#FF0015"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <ImageView
                                    android:id="@+id/iv_order_item"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/r_ic_pro" />

                                <TextView
                                    android:id="@+id/txt_order_item"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Sahaj Godhani"
                                    android:textAlignment="center"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_Qty"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="Qty : 05"
                                    android:textAlignment="center"
                                    android:textColor="#8E8E8E"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_order_status"
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Paid"
                                    android:textAlignment="textEnd"
                                    android:textColor="#08A551"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_pamnet_type"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Payment Type: Credit card"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_date"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Date: 23.07.2020"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_id"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Order No: #CMB9875"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_time"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Order Time: 12:00pm"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_order_deliver_type"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Order Type: Take way "
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="-"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

<!--                                android:text="Extra Sauce: SR 2.5 "-->

                                <TextView
                                    android:id="@+id/txt_total"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Total: 100 Total"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/txt_tax"
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Tax: SR 15"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="-"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />
<!--                                android:text="Service Fees : SR 2.50"-->

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Service Fees Tax: 0.15"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:padding="2dp"
                                    android:text="Total: SR 117.65"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FF0015"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_confirm"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/r_btn_design2"
                        android:text="Confirm"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_cancelled"
                        android:layout_width="100dp"
                        android:layout_height="40dp"

                        android:background="@drawable/r_btn_design"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_time"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/r_liner_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Set Delivery Time"
                            android:textAlignment="center"
                            android:textColor="#FF0015"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/r_btn_design_white"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/r_btn_design_white"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Hours"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="#FF0015" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=" "
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/r_btn_design_white"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/r_btn_design_white"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Minute"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text=":"
                                    android:textColor="#FF0015" />

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=" "
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="5dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />

                                    <TextView
                                        style="@style/TextAppearance.MaterialComponents.Headline6"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="#FF0015"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="Seconds"
                                    android:textAlignment="center"
                                    android:textColor="#4CAF50"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_timer_confirm"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/r_btn_design2"
                        android:text="Confirm"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="40dp"

                        android:background="@drawable/r_btn_design"
                        android:text="Cancel"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>

            </FrameLayout>


            <TextView
                android:id="@+id/txt_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_result_found"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:visibility="gone" />


        </FrameLayout>
    </LinearLayout>
</layout>